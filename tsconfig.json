{
  "compilerOptions": {
    "lib": [
      "es2022"
    ],
    "module": "commonjs",
    "target": "es2022",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "rootDir": "app/src",
    "outDir": "app/dist",
  },
  "include": ["app/src/**/*.ts"],
  "exclude": ["node_modules"]
}
